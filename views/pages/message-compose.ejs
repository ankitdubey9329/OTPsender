<!-- views/pages/message-compose.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ("../partials/header") %>
    </head>
<body class="container">
    <main>
        <div >
            <h2>Compose & Send</h2>
        </div>
        <div class="compose-message">
           <form method="POST" action="/send-otp">
                <input type="text" name="contact" value="<%= messageForContact.contact%>">
                <input type="text" name="text_message" value="Hi. Your OTP is:<%= messageForContact.random%>." >
                <input type="submit" value="Send">
           </form>
        </div>
    </main>

    <footer>
        <center>
            <%- include ("../partials/footer") %>
        </center>
    </footer>
    
</body>
</html>